<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/teal_700">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_arrow" />

    <!-- Title for the Activity -->
    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advertising Data"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Device Info -->
    <TextView
        android:id="@+id/deviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device: N/A"
        android:textSize="16sp"
        android:textColor="#333333"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />

    <!-- Advertising Data Details -->
    <TextView
        android:id="@+id/advertisingDataDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advertising Data Details: N/A"
        android:textSize="16sp"
        android:textColor="#333333"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />

    <!-- Temperature Meter -->
    <com.example.blegame.TemperatureViewMeter
        android:id="@+id/temperatureMeter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:elevation="4dp" />

</LinearLayout>
